<script>
  let currentScrollTop = 0;
  let box;
  window.onload = function() {
    // scrollController();

    $(window).on('scroll', function() {
      scrollController();
    });
  }

  function scrollController() {
    currentScrollTop = $(window).scrollTop();
    box = $('#20171001');
    // console.log($('#20171001').position().top, currentScrollTop)


    if(currentScrollTop < 56) {
      $('nav').css('top', -(currentScrollTop));
      box.css('top', 56-(currentScrollTop));
      if(box.hasClass('fixed')) {
        box.removeClass('fixed');
      }
    } else {
      if(!box.hasClass('fixed')) {
        $('nav').css('top', -56);
        box.css('top', 0);
        box.addClass('fixed');
      }
    }

